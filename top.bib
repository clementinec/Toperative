	author = {Mendell, M. J. and Heath, G. A.},
	date = {2005-02},
	pmid = {15660567},
	keywords = {Humans, Temperature, Ventilation, Air Pollution, Indoor, Asthma, Child, Formaldehyde, Absenteeism, Educational Status, Fixatives, Health Status, Schools, Students}
}

